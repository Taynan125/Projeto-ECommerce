@model IEnumerable<ECommerceTaynan.Models.Tax>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Impostos</h2>

<p>
    @Html.ActionLink("Novo Imposto", "Create", new {}, new { @class = " btn btn-primary " })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rate)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.TaxId }, new { @class = " btn btn-warning " }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.TaxId }, new { @class = " btn btn-info " } ) |
            @Html.ActionLink("Ecluir", "Delete", new { id=item.TaxId }, new { @class = " btn btn-danger " })
        </td>
    </tr>
}

</table>
